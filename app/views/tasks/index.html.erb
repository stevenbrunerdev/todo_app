<% if notice.present? %>
  <div class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert">
    <%= alert %>
  </div>
<% end %>

<h1 class="font-bold text-2xl">ToDo App</h1>

<div class="mt-4">
  <%= render "form", task: @task %>
</div>

<div id="tasks">
  <h1 class="font-bold text-lg mb-7">Task List</h1>

  <div class="px-5" data-controller="tasks">
    <%= render @tasks %>
  </div>
</div>
